<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="poloapps.orbitfingers"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Base.Theme.AppCompat"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainMenu_Activity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OF_Activity"
            android:label="@string/SOF"
            android:parentActivityName=".MainMenu_Activity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenu_Activity" />
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".User_Activity"
            android:parentActivityName=".MainMenu_Activity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".TopFiveActivity"
            android:label="@string/title_activity_top_ten"
            android:parentActivityName=".User_Activity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="poloapps.orbitfingers.User_Activity" />
        </activity>
    </application>

</manifest>