<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".TopFiveActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <TextView
            android:id="@+id/tv_rank_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="8dp"
            android:text="@string/rank"
            android:textColor="@color/bright_yellow" />

        <TextView
            android:id="@+id/tv_peak_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/peak_txt"
            android:textColor="@color/bright_yellow" />

        <TextView
            android:id="@+id/tv_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/user_name"
            android:textColor="@color/bright_yellow" />

        <TextView
            android:id="@+id/tv_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="30dp"
            android:text="@string/msg_txt"
            android:textColor="@color/bright_yellow" />

    </TableRow>

    <TableRow
        android:id="@+id/tr_top1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="5dp"
            android:text="@string/one"
            android:textColor="@color/green2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_top_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/x"
            android:textColor="@color/green2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_top_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/not_available"
            android:textColor="@color/green2"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_top_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="30dp"
            android:text="@string/x"
            android:textColor="@color/green2"
            android:textStyle="bold|italic" />

    </TableRow>

    <TableRow
        android:id="@+id/tr_top2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray">

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="5dp"
            android:text="@string/two"
            android:textColor="@color/green_A" />

        <TextView
            android:id="@+id/tv_top_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/x"
            android:textColor="@color/green_A" />

        <TextView
            android:id="@+id/tv_top2_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/not_available"
            android:textColor="@color/green_A" />

        <TextView
            android:id="@+id/tv_t2_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="30dp"
            android:text="@string/x"
            android:textColor="@color/green_A" />

    </TableRow>

    <TableRow
        android:id="@+id/tr_top3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray">

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="5dp"
            android:text="@string/three"
            android:textColor="@color/green_B" />

        <TextView
            android:id="@+id/tv_top_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/x"
            android:textColor="@color/green_B" />

        <TextView
            android:id="@+id/tv_top3_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/not_available"
            android:textColor="@color/green_B" />

        <TextView
            android:id="@+id/tv_t3_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="30dp"
            android:text="@string/x"
            android:textColor="@color/green_B" />

    </TableRow>

    <TableRow
        android:id="@+id/tr_top4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/dark_gray">

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="5dp"
            android:text="@string/four"
            android:textColor="@color/green_C" />

        <TextView
            android:id="@+id/tv_top_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/x"
            android:textColor="@color/green_C" />

        <TextView
            android:id="@+id/tv_top4_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/not_available"
            android:textColor="@color/green_C" />

        <TextView
            android:id="@+id/tv_t4_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="30dp"
            android:text="@string/x"
            android:textColor="@color/green_C" />


    </TableRow>

    <TableRow
        android:id="@+id/tr_top5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/dark_gray">

        <TextView
            android:id="@+id/tv_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="5dp"
            android:text="@string/five"
            android:textColor="@color/green_D" />

        <TextView
            android:id="@+id/tv_top_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/x"
            android:textColor="@color/green_D" />

        <TextView
            android:id="@+id/tv_top5_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/not_available"
            android:textColor="@color/green_D" />

        <TextView
            android:id="@+id/tv_t5_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_marginLeft="30dp"
            android:text="@string/x"
            android:textColor="@color/green_D" />


    </TableRow>

    <TableRow
        android:id="@+id/tr_nonT5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/maroon"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_NT5_Rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/x"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_NT5_Peak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="8dp"
            android:text="@string/x"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_nt5_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="20dp"
            android:text="@string/not_available"
            android:textColor="@color/red" />


    </TableRow>

</TableLayout>


