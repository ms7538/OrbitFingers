<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        tools:context=".Home_Activity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <!-- Content here -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/main_menu_message"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="@android:color/holo_blue_bright"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/how_to_btn"
                android:layout_width="match_parent"
                android:layout_height='0dp'
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/how_to"
                android:textColor="@color/bright_yellow" />

            <Button
                android:id="@+id/play_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="@string/play" />


            <TextView
                android:id="@+id/current_level_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/current_level_tv" />

            <TextView
                android:id="@+id/current_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x" />

            <TextView
                android:id="@+id/current_level_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/spacer"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/Peak_Score_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/peak_score_tv"
                android:textColor="@color/green2" />

            <TextView
                android:id="@+id/peak_score_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="@color/green2" />

            <TextView
                android:id="@+id/peak_score_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/spacer"
                android:textColor="@color/green2" />

            <TextView
                android:id="@+id/min_score_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/min_score_tv" />

            <TextView
                android:id="@+id/current_min_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x" />

            <TextView
                android:id="@+id/min_score_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/spacer"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/target_score_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/target_score_tv" />

            <TextView
                android:id="@+id/current_target_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x" />


            <TextView
                android:id="@+id/target_score_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/spacer"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/penalty_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/penalty_tv" />

            <TextView
                android:id="@+id/current_penalty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x" />

            <TextView
                android:id="@+id/penalty_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/spacer"
                android:textColor="@color/red" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

            <Button
                android:id="@+id/set_peak_min_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:text="@string/set_peak_min"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/smp_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/set_peak_min_text" />

            <TextView
                android:id="@+id/remaining_smp_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x" />

            <TextView
                android:id="@+id/smp_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/spacer"
                android:textColor="@color/red" />
            <Button
                android:id="@+id/login_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/login_register" />
            <Button
                android:id="@+id/reset1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/reset" />

        </LinearLayout>
    </ScrollView>
